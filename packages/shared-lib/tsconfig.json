{
  "extends": "@partyfy/tsconfig/base.json",
  "include": ["."],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "typeRoots": ["./types"],
    "noEmit": false,
    "emitDeclarationOnly": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist"
  }
}
