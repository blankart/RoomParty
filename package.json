{
  "name": "tube-hub-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "env-cmd --file .env.local turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma:migrate": "env-cmd --file .env.local turbo run migrate --filter=prisma-client --",
    "prisma:reset": "env-cmd --file .env.local turbo run reset --filter=prisma-client --",
    "prisma:deploy": "env-cmd --file .env.local turbo run deploy --filter=prisma-client --",
    "postinstall": "if [ $SERVER_ENV ]; then npm run postinstall-server; else echo no environment detected, please set SERVER_ENV; fi",
    "postinstall-server": "cd app/server && npm install"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint-config-custom": "*",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}
