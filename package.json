{
  "name": "tube-hub-monorepo",
  "version": "5.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "turbo": "turbo",
    "dev:turbo": "env-cmd --file .env.local turbo",
    "prepare": "husky install",
    "build": "turbo run build",
    "build:server": "turbo run build --filter=@RoomParty/server --",
    "start:server": "turbo run start --filter=@RoomParty/server --",
    "start:web": "turbo run start --filter=@RoomParty/web --",
    "start": "turbo run start --parallel",
    "studio": "env-cmd --file .env.local turbo run studio",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test:unit": "turbo run test:unit --color",
    "test:unit:watch": "turbo run test:unit:watch --color",
    "test": "turbo run test --color",
    "format": "prettier --write \"**/*.{ts,tsx,md,js}\"",
    "dev:build": "env-cmd --file .env.local turbo run dev:build",
    "dev:start": "env-cmd --file .env.local turbo run start",
    "dev": "env-cmd --file .env.local turbo run dev --parallel",
    "dev:only": "env-cmd --file .env.local turbo run dev:only --parallel",
    "dev:studio": "env-cmd --file .env.local turbo run studio",
    "dev:migrate": "env-cmd --file .env.local turbo run migrate --filter=@RoomParty/prisma-client --",
    "dev:reset": "env-cmd --file .env.local turbo run reset --filter=@RoomParty/prisma-client --",
    "dev:deploy": "env-cmd --file .env.local turbo run deploy --filter=@RoomParty/prisma-client --",
    "dev:generate": "env-cmd --file .env.local turbo run generate --filter=@RoomParty/prisma-client --",
    "dev:pull": "env-cmd --file .env.local turbo run pull --filter=@RoomParty/prisma-client --",
    "migrate": "env-cmd --file .env.production turbo run migrate --filter=@RoomParty/prisma-client --",
    "reset": "env-cmd --file .env.production turbo run reset --filter=@RoomParty/prisma-client --",
    "deploy": "env-cmd --file .env.production turbo run deploy --filter=@RoomParty/prisma-client --",
    "pull": "env-cmd --file .env.production turbo run pull --filter=@RoomParty/prisma-client --",
    "prisma:deploy": "env-cmd --file .env.production turbo run deploy --filter=@RoomParty/prisma-client --",
    "generate": "env-cmd --file .env.production turbo run generate --filter=@RoomParty/prisma-client --",
    "gcloud:deploy:server": "./scripts/server/gcloud-deploy-server.sh",
    "gcloud:build:server": "gcloud builds submit",
    "dev:docker:start": "docker-compose --env-file .env.local -f docker-compose.yml up -d",
    "docker:start": "docker-compose --env-file .env.production -f docker-compose.yml up -d",
    "dev:docker:build-and-push": "./scripts/server/build-and-push.sh .env.production",
    "docker:build-and-push": "./scripts/server/build-and-push.sh .env.production",
    "docker:build-push-and-deploy": "./scripts/server/build-push-and-deploy.sh .env.production",
    "check-branch-name": "chmod 755 ./scripts/ci/check_branch_naming.sh && sh ./scripts/ci/check_branch_naming.sh"
  },
  "devDependencies": {
    "@RoomParty/eslint-config-custom": "*",
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "env-cmd": "10.1.0",
    "husky": "^8.0.1",
    "prettier": "2.7.1",
    "turbo": "1.5.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}
